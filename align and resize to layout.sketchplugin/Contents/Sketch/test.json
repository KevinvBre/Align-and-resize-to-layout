    "commands" : [
        {
          "name" : "k-grid",
          "identifier" : "xyz",
          "script" : "script.js",
          "script": "grid.js",
          "handlers": {
              "actions": {
                "ArtboardChanged.finish": "ArtboardChanged",
                "LayersMoved.finish": "LayersMoved",
