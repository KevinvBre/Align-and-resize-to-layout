                "ResizeArtboardToFit": "ResizeArtboardToFit",
                "InsertArtboard.finish": "InsertArtboard"
              }
            }
        }
        {
            "script": "script.js",
            "handler": "moveColLeft",
            "shortcut": "cmd ctrl alt j",
            "name": "Distribute Horizontally…",
            "description": "Distribute the selected layers horizontally with a fixed distance.",
            "identifier": "breemaatLeft"
        },
        {
            "script": "script.js",
            "handler": "moveColLeft",
            "shortcut": "cmd ctrl alt l",
            "name": "Distribute Horizontally…",
            "description": "Distribute the selected layers horizontally with a fixed distance.",
            "identifier": "breemaatRight"
        },
    ],

    "menu" : {
        "title": "kevin",
        "items": [
            "breemaatCheck",
            "breemaatLeft",
            "breemaatRight"
        ]
    },
}



